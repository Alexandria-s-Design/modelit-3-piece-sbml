# SBML Builder - Environment Configuration
# Zero Authentication Edition

# ========================================
# AUTHENTICATION (ALL DISABLED)
# ========================================
AUTH_ENABLED=false
NO_AUTH=true
AUTO_LOGIN=true
OPEN_ACCESS=true

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=db
DB_PORT=5432
DB_NAME=sbml_models
DB_USER=sbml
# NO PASSWORD - Using PostgreSQL trust mode
POSTGRES_HOST_AUTH_METHOD=trust

# ========================================
# SERVICE URLS
# ========================================
API_URL=http://localhost:5001
CCAPP_URL=http://ccapp:8080
APP_URL=http://app:8081

# ========================================
# FLASK CONFIGURATION
# ========================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=not-needed-no-auth

# ========================================
# CORS (Allow all origins for local use)
# ========================================
CORS_ORIGINS=*

# ========================================
# PORTS
# ========================================
API_PORT=5001
FRONTEND_PORT=5001  # Frontend served by Flask API
CCAPP_PORT=8082     # Changed from 8080 to avoid conflicts
APP_PORT=8081
DB_PORT=5432

# ========================================
# SIMULATION DEFAULTS
# ========================================
DEFAULT_SIM_STEPS=100
DEFAULT_SIM_METHOD=java-advanced

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
